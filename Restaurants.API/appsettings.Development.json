{
  "Serilog": {
    "MinimumLevel": {
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "OutputTemplate": "[{Timestamp:dd-MM HH:mm:ss} {Level:u3}] |{SourceContext}| {NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/RestaurantAPI-.log",
          "rollingInterval": "Day",
          "rollOnlyWhenChanged": true
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=Restaurants.db"
  }
}
